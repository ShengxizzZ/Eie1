<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/item_cate_imageview"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:background="@color/gray_20" />
        <TextView android:id="@+id/item_cate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/item_cate_imageview"
            android:text="房间开啦束带结发拉克丝绝对空了发"/>
        <TextView
            android:id="@+id/item_cate_count"
            android:layout_below="@+id/item_cate_title"
            android:layout_toRightOf="@+id/item_cate_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="5dp"
            android:text="11"
            android:gravity="center"
            android:drawableStart="@mipmap/ic_watching1"
            android:padding="2dp"
            android:drawablePadding="@dimen/default_tiny_margin"
            android:textColor="@color/black_alpha_45"
            />
        <TextView android:id="@+id/item_cate_comments"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/item_cate_count"
            android:drawableStart="@mipmap/ic_subtitles_black_24dp"
            android:text="55"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/item_cate_title"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/l1"
            android:layout_toRightOf="@+id/item_cate_imageview"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/item_cate_imageview"
            android:text="演讲教师："
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/item_cate_teacher"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/l1"
            android:layout_alignBottom="@+id/l1"
            android:text="sfsk"
            android:textColor="@color/gray_20"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>