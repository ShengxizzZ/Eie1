<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shengxi.eie.activity.MainActivity">

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txt_sutudy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_study"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_study_text"
            android:text="学习"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txt_com"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_com"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_study_text"
            android:text="社区"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txt_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_msg"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_study_text"
            android:text="论坛"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txt_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_self"
            android:gravity="center"
            android:textColor="@drawable/tab_menu_study_text"
            android:text="用户"/>

    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@android:color/darker_gray"
        android:layout_above="@id/tab_menu"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_menu"
        android:background="@android:color/transparent">
    </FrameLayout>

</RelativeLayout>
