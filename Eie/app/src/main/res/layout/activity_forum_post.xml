<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_back"
            android:layout_width="@dimen/default_long_margin"
            android:layout_height="@dimen/default_long_margin"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/default_tiny_padding"
            android:background="@mipmap/ic_arrow_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发帖"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/post_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"

            android:text="完成"
            android:textColor="@android:color/white" />
    </RelativeLayout>
            <EditText
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:hint="标题"
                android:paddingLeft="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_20" />

            <EditText
                android:id="@+id/post_summary"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@null"
                android:gravity="start"
                android:hint="概述"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColorHint="@color/gray_20" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_20" />

            <EditText
                android:id="@+id/post_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="start"
                android:hint="说点什么吧..."
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColorHint="@color/gray_20" />
</LinearLayout>