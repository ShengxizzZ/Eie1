<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView android:id="@+id/user_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/default_grow_margin"
                    android:layout_marginTop="@dimen/default_grow_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_head_noftiy"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_setting" />
                </LinearLayout>
                <TextView
                    android:layout_gravity="center|bottom"
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="30dp"
                    android:textSize="@dimen/default_small_text_size" />

                <com.example.shengxi.eie.utils.CircleImageView


                    android:id="@+id/user_avatar_view"
                    android:layout_width="@dimen/navigation_avatar_size"
                    android:layout_height="@dimen/navigation_avatar_size"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/default_grow_margin"
                    android:src="@mipmap/ico_user_default"
                    />
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_height"
            android:layout_marginBottom="@dimen/default_general_margin"
            android:layout_marginLeft="@dimen/default_general_margin"
            android:layout_marginRight="@dimen/default_general_margin"
            android:layout_marginTop="@dimen/default_long_margin"
            android:background="@drawable/btn_logout"
            android:gravity="center"
            android:text="@string/cancell"
            android:textColor="@android:color/white"
            android:textSize="@dimen/default_medium_text_size" />
    </RelativeLayout>
</LinearLayout>